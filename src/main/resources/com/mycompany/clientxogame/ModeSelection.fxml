<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0"
      prefWidth="650.0" spacing="45.0" xmlns="http://javafx.com/javafx/25"
      style="-fx-background-color: linear-gradient(to bottom, #ffd1e8, #c8b3ff, #a0ffff);"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.clientxogame.ModeSelectionController">
   <children>
      
      <Button fx:id="btmSingle" mnemonicParsing="false" onAction="#onActionBtmSingle" 
              onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit"
              prefHeight="65.0" prefWidth="300.0" 
              style="-fx-background-color: #8e44ad; -fx-background-radius: 50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 26px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 5);" 
              text="Single Player" />

      <Button fx:id="btmPlayer" mnemonicParsing="false" onAction="#onActionBtmPlayer" 
              onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit"
              prefHeight="65.0" prefWidth="300.0" 
              style="-fx-background-color: #d81b60; -fx-background-radius: 50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 26px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 5);" 
              text="Two Players" />

      <Button fx:id="btmOline" mnemonicParsing="false" onAction="#onActionOnline" 
              onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit"
              prefHeight="65.0" prefWidth="300.0" 
              style="-fx-background-color: #2980b9; -fx-background-radius: 50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 26px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 5);" 
              text="Online Mode" />

      

     

      
   </children>
</VBox>