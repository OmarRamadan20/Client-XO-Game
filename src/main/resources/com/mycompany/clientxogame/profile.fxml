<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="650.0" prefWidth="650.0" 
           style="-fx-background-color: linear-gradient(to bottom, #ffd1e8, #c8b3ff, #a0ffff);" 
           xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.mycompany.clientxogame.ProfileController">
   <children>
      <VBox alignment="CENTER" maxHeight="500.0" maxWidth="400.0" spacing="25.0" 
            style="-fx-background-color: white; -fx-background-radius: 40; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 20, 0, 0, 10);">
         <children>
            <StackPane maxWidth="130.0">
               <children>
                  <Circle fill="WHITE" radius="65.0" stroke="#8e44ad" strokeWidth="3.0" />
                  <ImageView fx:id="ImageId" fitHeight="120.0" fitWidth="120.0" preserveRatio="true">
                     <clip>
                        <Circle centerX="60.0" centerY="60.0" radius="60.0" />
                     </clip>
                  </ImageView>
               </children>
            </StackPane>

            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label fx:id="LableId" text="Player Name" textFill="#8e44ad">
                     <font>
                        <Font name="System Bold Italic" size="26.0" />
                     </font>
                  </Label>
                  <Label text="Champion Rank" textFill="#95a5a6">
                     <font>
                        <Font name="System Italic" size="14.0" />
                     </font>
                  </Label>
               </children>
            </VBox>

            <VBox alignment="CENTER" style="-fx-background-color: #f8f9fa; -fx-background-radius: 20; -fx-padding: 15;">
               <children>
                  <Label text="TOTAL SCORE" textFill="#7f8c8d">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="ScoreId" text="150" textFill="#d81b60">
                     <font>
                        <Font name="System Bold" size="42.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="40.0" right="40.0" />
               </VBox.margin>
            </VBox>

            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="BackButtonId" onAction="#onBack" 
                          onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit" 
                          onMousePressed="#handleMousePressed" onMouseReleased="#handleMouseReleased"
                          prefHeight="50.0" prefWidth="130.0" 
                          style="-fx-background-color: linear-gradient(to bottom, #bdc3c7, #95a5a6); -fx-background-radius: 50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 4); -fx-cursor: hand;" text="Back" />
                  
                  <Button fx:id="RecordsButtonId" onAction="#onRecord" 
                          onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit" 
                          onMousePressed="#handleMousePressed" onMouseReleased="#handleMouseReleased"
                          prefHeight="50.0" prefWidth="130.0" 
                          style="-fx-background-color: linear-gradient(to bottom, #A569FF, #8e44ad); -fx-background-radius: 50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 4); -fx-cursor: hand;" text="Records" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </children>
</StackPane>