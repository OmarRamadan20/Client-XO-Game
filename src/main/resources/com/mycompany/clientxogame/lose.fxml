<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="700.0" prefWidth="700.0" 
            style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #000000);" 
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.mycompany.clientxogame.ui.game.result.LoseController">
   
   <top>
      <VBox alignment="CENTER" prefHeight="160.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="result" text="YOU LOSE" textFill="#e74c3c">
               <font>
                  <Font name="System Bold" size="64.0" />
               </font>
               <effect>
                  <DropShadow blurType="GAUSSIAN" height="20.0" radius="9.5" width="20.0" color="#e74c3c99" />
               </effect>
            </Label>
            <Label text="Don't give up! Try again to win." textFill="#ecf0f1">
               <font>
                  <Font name="System Italic" size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets top="40.0" />
         </padding>
      </VBox>
   </top>

   <center>
      <StackPane prefHeight="350.0" prefWidth="500.0" 
                 style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 30; -fx-max-width: 480; -fx-max-height: 320; -fx-border-color: #e74c3c; -fx-border-radius: 30; -fx-border-width: 2;" 
                 BorderPane.alignment="CENTER">
         <children>
            <MediaView fx:id="mediaView" fitHeight="280.0" fitWidth="420.0" />
         </children>
         <effect>
            <DropShadow radius="25.0" color="#e74c3c4d" />
         </effect>
      </StackPane>
   </center>

   <bottom>
      <AnchorPane prefHeight="160.0" prefWidth="700.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="700.0" spacing="50.0" layoutY="20.0">
               <children>
                  <Button fx:id="newGameButton" mnemonicParsing="false" onAction="#newGame" prefHeight="58.0" prefWidth="200.0" 
                          style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 50; -fx-font-weight: bold; -fx-font-size: 20px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 5);" 
                          text="New Game" />
                  
                  <Button fx:id="playAgainButton" mnemonicParsing="false" onAction="#playAgain" prefHeight="58.0" prefWidth="200.0" 
                          style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 50; -fx-font-weight: bold; -fx-font-size: 20px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 5);" 
                          text="Play Again" />
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>