<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="650.0" prefWidth="650.0" 
           style="-fx-background-color: linear-gradient(to bottom, #ffd1e8, #c8b3ff, #a0ffff);" 
           xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.mycompany.clientxogame.LoginController">
   <children>
      <VBox alignment="CENTER" maxHeight="520.0" maxWidth="450.0" spacing="25.0" 
            style="-fx-background-color: white; -fx-background-radius: 40; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 25, 0, 0, 15);">
         <children>
            <Label text="Welcome Back" textFill="#8e44ad">
               <font>
                  <Font name="System Bold Italic" size="34.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>

            <TextField fx:id="enterEmail" prefHeight="55.0" promptText="Email Address" 
                       style="-fx-background-radius: 50; -fx-background-color: #f1f2f6; -fx-border-color: #dfe4ea; -fx-border-radius: 50; -fx-font-size: 16px;">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <VBox.margin>
                  <Insets left="40.0" right="40.0" />
               </VBox.margin>
            </TextField>

            <PasswordField fx:id="enterPassword" prefHeight="55.0" promptText="Password" 
                           style="-fx-background-radius: 50; -fx-background-color: #f1f2f6; -fx-border-color: #dfe4ea; -fx-border-radius: 50; -fx-font-size: 16px;">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <VBox.margin>
                  <Insets left="40.0" right="40.0" />
               </VBox.margin>
            </PasswordField>

            <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#logIn" 
                    onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit" 
                    onMousePressed="#handleMousePressed" onMouseReleased="#handleMouseReleased"
                    prefHeight="55.0" prefWidth="300.0" 
                    style="-fx-background-radius: 50; -fx-background-color: linear-gradient(to bottom, #A569FF, #8e44ad); -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 5); -fx-cursor: hand;" 
                    text="Login" />

            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Don't have an account?" textFill="#7f8c8d">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <Button fx:id="registerID" onAction="#register" 
                          onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit"
                          style="-fx-background-color: transparent; -fx-text-fill: #8e44ad; -fx-font-weight: bold; -fx-font-size: 15px; -fx-cursor: hand; -fx-padding: 0;" 
                          text="Register Now" />
               </children>
            </HBox>

            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#actionBtn" 
                    onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit" 
                    onMousePressed="#handleMousePressed" onMouseReleased="#handleMouseReleased"
                    prefHeight="40.0" prefWidth="100.0" 
                    style="-fx-background-radius: 50; -fx-background-color: #dfe4ea; -fx-text-fill: #2f3542; -fx-font-weight: bold; -fx-cursor: hand;" 
                    text="Back" />
         </children>
         <padding>
            <Insets bottom="30.0" top="30.0" />
         </padding>
      </VBox>
   </children>
</StackPane>