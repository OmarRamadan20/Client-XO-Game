<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.clientxogame.signUpController"
      alignment="CENTER"
      spacing="35" 
      prefWidth="650"
      prefHeight="650"
      style="-fx-background-color: linear-gradient(to bottom, #ffd1e8, #c8b3ff, #a0ffff);">

    <Label text="Tic Tac Toe">
        <font>
            <Font name="System Bold" size="36.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <VBox alignment="CENTER"
          spacing="20"
          maxWidth="320">

        <TextField fx:id="enterName"
                   promptText="Enter Your Name"
                   prefHeight="50"
                   style="-fx-background-radius: 50; -fx-padding: 0 20 0 20; -fx-font-size: 16px;"/>

        <TextField fx:id="enterEmail"
                   promptText="Enter Your Email"
                   prefHeight="50"
                   style="-fx-background-radius: 50; -fx-padding: 0 20 0 20; -fx-font-size: 16px;"/>

        <PasswordField fx:id="passID"
                       promptText="Enter Your Password"
                       prefHeight="50"
                       style="-fx-background-radius: 50; -fx-padding: 0 20 0 20; -fx-font-size: 16px;"
                       onAction="#OnActionPassword"/>

        <PasswordField fx:id="confirmPass"
                       promptText="Confirm Password"
                       prefHeight="50"
                       style="-fx-background-radius: 50; -fx-padding: 0 20 0 20; -fx-font-size: 16px;"/>
    </VBox>

    <HBox spacing="30" alignment="CENTER">
        <padding>
            <Insets top="10.0" />
        </padding>
        
        <Button fx:id="btnBack"
                text="Back"
                prefWidth="130"
                prefHeight="50"
                onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit"
                style="-fx-background-radius: 50; -fx-cursor: hand; -fx-background-color: white; -fx-font-weight: bold; -fx-font-size: 18px;"
                onAction="#ActionBack" />

        <Button fx:id="btnSignUp"
                text="Sign Up"
                prefWidth="130"
                prefHeight="50"
                onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit"
                style="-fx-background-radius: 50; -fx-background-color: #6c5ce7; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold; -fx-font-size: 18px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);"
                onAction="#signUp" />
    </HBox>

</VBox>