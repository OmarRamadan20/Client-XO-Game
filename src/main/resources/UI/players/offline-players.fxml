<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="650.0" style="-fx-background-color: linear-gradient(to bottom, #ffd1e8, #c8b3ff, #a0ffff);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.clientxogame.ui.game.multiplayer.OfflinePlayersController">

    <children>

        <Label layoutX="230.0" layoutY="40.0" style="-fx-text-fill: #A569FF; -fx-font-style: italic;" text="Tic Tac Toe">
            <font>
                <Font name="System Bold Italic" size="40.0" />
            </font>
        </Label>

        <StackPane layoutX="75.0" layoutY="135.0" prefHeight="130.0" prefWidth="130.0">

            <ImageView fx:id="playerAvatar" fitHeight="120.0" fitWidth="120.0" smooth="true">
                <image>
                    <Image url="@../../images/player_image.png" />
                </image>

                <!-- قص دائري حقيقي -->
                <clip>
                    <Circle centerX="60" centerY="60" radius="60" />
                </clip>
            </ImageView>

            <!-- الإطار -->
            <Circle fill="TRANSPARENT" radius="60" stroke="#A569FF" strokeWidth="3" />
        </StackPane>



        <!-- Player 1 Name -->
        <TextField fx:id="player1Name" layoutX="250.0" layoutY="175.0" onAction="#onActionEnterNameplayer1" prefHeight="50.0" prefWidth="300.0" promptText="Enter Player 1 Name" style="-fx-background-radius: 50;                           -fx-border-color: #A569FF;                           -fx-border-radius: 50;                           -fx-padding: 10 20;                           -fx-font-size: 16px;" />

        <StackPane layoutX="75.0" layoutY="315.0" prefHeight="130.0" prefWidth="130.0">

            <ImageView fx:id="playerAvatar1" fitHeight="120.0" fitWidth="120.0" smooth="true">
                <image>
                    <Image url="@../../images/player_image.png" />
                </image>

                <clip>
                    <Circle centerX="60" centerY="60" radius="60" />
                </clip>
            </ImageView>

            <Circle fill="TRANSPARENT" radius="60" stroke="#A569FF" strokeWidth="3" />
        </StackPane>



        <TextField fx:id="player2Name" layoutX="250.0" layoutY="355.0" onAction="#onActionEnterPlayer2" prefHeight="50.0" prefWidth="300.0" promptText="Enter Player 2 Name" style="-fx-background-radius: 50;                           -fx-border-color: #A569FF;                           -fx-border-radius: 50;                           -fx-padding: 10 20;                           -fx-font-size: 16px;" />

        <Button fx:id="btnBack" layoutX="80.0" layoutY="550.0" 
                onAction="#onActionBack" 
                onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit"
                onMousePressed="#handleMousePressed" onMouseReleased="#handleMouseReleased"
                prefHeight="60.0" prefWidth="200.0" 
                style="-fx-background-color: #A569FF; -fx-background-radius: 50; -fx-text-fill: white; -fx-font-size: 25px; -fx-font-weight: bold; -fx-font-style: italic; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0); -fx-cursor: hand;" 
                text="Back" />

        <Button fx:id="btnPlay" layoutX="420.0" layoutY="550.0" 
                onAction="#onActionPlay" 
                onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit"
                onMousePressed="#handleMousePressed" onMouseReleased="#handleMouseReleased"
                prefHeight="60.0" prefWidth="200.0" 
                style="-fx-background-color: #A569FF; -fx-background-radius: 50; -fx-text-fill: white; -fx-font-size: 25px; -fx-font-weight: bold; -fx-font-style: italic; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 0); -fx-cursor: hand;" 
                text="Let's Play" />
    </children>
</AnchorPane>
