<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="700.0" prefWidth="850.0" 
           style="-fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #ffd1e8, #c8b3ff, #a0ffff);" 
           xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.mycompany.clientxogame.XOController">

    <BorderPane>
        <top>
            <VBox alignment="CENTER" prefHeight="120">
                <Label text="TIC TAC TOE" textFill="#8e44ad">
                    <font>
                        <Font name="System Bold Italic" size="48.0" />
                    </font>
                </Label>
            </VBox>
        </top>

        <center>
            <HBox alignment="CENTER" spacing="50">
                
                <VBox alignment="CENTER" spacing="15" 
                      style="-fx-background-color: rgba(255,255,255,0.3); -fx-background-radius: 25; -fx-padding: 25; -fx-border-color: #d81b60; -fx-border-radius: 25; -fx-border-width: 2;">
                    <Label fx:id="Playerone" text="Player 1 (X)" textFill="#2c003e" style="-fx-font-weight: bold;">
                        <font><Font size="24.0" /></font>
                    </Label>
                    <Label fx:id="playerOneScore" text="0" textFill="#d81b60">
                        <font><Font name="System Bold" size="44.0" /></font>
                    </Label>
                </VBox>

                <GridPane alignment="CENTER" hgap="15" vgap="15">
                    <StackPane onMouseClicked="#handleCellClick" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-cursor: hand;">
                        <Rectangle arcHeight="25" arcWidth="25" fill="#2c003e" height="115" width="115" />
                        <Text fx:id="cell00" fill="LIME" style="-fx-font-weight: bold;"><font><Font size="70.0" /></font></Text>
                    </StackPane>
                    <StackPane onMouseClicked="#handleCellClick" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-cursor: hand;">
                        <Rectangle arcHeight="25" arcWidth="25" fill="#2c003e" height="115" width="115" />
                        <Text fx:id="cell01" fill="LIME" style="-fx-font-weight: bold;"><font><Font size="70.0" /></font></Text>
                    </StackPane>
                    <StackPane onMouseClicked="#handleCellClick" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-cursor: hand;">
                        <Rectangle arcHeight="25" arcWidth="25" fill="#2c003e" height="115" width="115" />
                        <Text fx:id="cell02" fill="LIME" style="-fx-font-weight: bold;"><font><Font size="70.0" /></font></Text>
                    </StackPane>

                    <StackPane onMouseClicked="#handleCellClick" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-cursor: hand;">
                        <Rectangle arcHeight="25" arcWidth="25" fill="#2c003e" height="115" width="115" />
                        <Text fx:id="cell10" fill="HOTPINK" style="-fx-font-weight: bold;"><font><Font size="70.0" /></font></Text>
                    </StackPane>
                    <StackPane onMouseClicked="#handleCellClick" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-cursor: hand;">
                        <Rectangle arcHeight="25" arcWidth="25" fill="#2c003e" height="115" width="115" />
                        <Text fx:id="cell11" fill="HOTPINK" style="-fx-font-weight: bold;"><font><Font size="70.0" /></font></Text>
                    </StackPane>
                    <StackPane onMouseClicked="#handleCellClick" GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-cursor: hand;">
                        <Rectangle arcHeight="25" arcWidth="25" fill="#2c003e" height="115" width="115" />
                        <Text fx:id="cell12" fill="HOTPINK" style="-fx-font-weight: bold;"><font><Font size="70.0" /></font></Text>
                    </StackPane>

                    <StackPane onMouseClicked="#handleCellClick" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-cursor: hand;">
                        <Rectangle arcHeight="25" arcWidth="25" fill="#2c003e" height="115" width="115" />
                        <Text fx:id="cell20" fill="CYAN" style="-fx-font-weight: bold;"><font><Font size="70.0" /></font></Text>
                    </StackPane>
                    <StackPane onMouseClicked="#handleCellClick" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-cursor: hand;">
                        <Rectangle arcHeight="25" arcWidth="25" fill="#2c003e" height="115" width="115" />
                        <Text fx:id="cell21" fill="CYAN" style="-fx-font-weight: bold;"><font><Font size="70.0" /></font></Text>
                    </StackPane>
                    <StackPane onMouseClicked="#handleCellClick" GridPane.columnIndex="2" GridPane.rowIndex="2" style="-fx-cursor: hand;">
                        <Rectangle arcHeight="25" arcWidth="25" fill="#2c003e" height="115" width="115" />
                        <Text fx:id="cell22" fill="CYAN" style="-fx-font-weight: bold;"><font><Font size="70.0" /></font></Text>
                    </StackPane>
                </GridPane>

                <VBox alignment="CENTER" spacing="15" 
                      style="-fx-background-color: rgba(255,255,255,0.3); -fx-background-radius: 25; -fx-padding: 25; -fx-border-color: #2ecc71; -fx-border-radius: 25; -fx-border-width: 2;">
                    <Label fx:id="Playertwo" text="Player 2 (O)" textFill="#2c003e" style="-fx-font-weight: bold;">
                        <font><Font size="24.0" /></font>
                    </Label>
                    <Label fx:id="PlayerTwoScore" text="0" textFill="#2ecc71">
                        <font><Font name="System Bold" size="44.0" /></font>
                    </Label>
                </VBox>
            </HBox>
        </center>

        <bottom>
            <HBox alignment="CENTER" prefHeight="100.0">
                <padding><Insets bottom="30.0" /></padding>
                <children>
                    <Button fx:id="idRecords" mnemonicParsing="false" onAction="#onActionRecode" prefHeight="50.0" prefWidth="160.0" 
                            style="-fx-background-color: linear-gradient(to bottom, #4facfe, #00f2fe); -fx-background-radius: 50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 5);" 
                            text="Start Record" />
                </children>
            </HBox>
        </bottom>
    </BorderPane>
    <AnchorPane mouseTransparent="true" prefHeight="700.0" prefWidth="850.0">
        <children>
            <HBox fx:id="recordingIndicator" alignment="CENTER" layoutX="30.0" layoutY="30.0" spacing="8.0" visible="false" 
                  style="-fx-background-color: rgba(0,0,0,0.6); -fx-background-radius: 20; -fx-padding: 10 15;">
                <children>
                    <Circle fx:id="redDot" fill="#ff4757" radius="8.0" stroke="TRANSPARENT" />
                    <Label text="REC" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                </children>
            </HBox>
        </children>
    </AnchorPane>

    <VBox fx:id="endGameBox" alignment="CENTER" spacing="15" visible="false" 
          style="-fx-background-color: rgba(44, 0, 62, 0.9); -fx-background-radius: 30; -fx-max-width: 320; -fx-max-height: 220; -fx-border-color: white; -fx-border-radius: 30;">
        <Label text="Game Over!" textFill="white" style="-fx-font-weight: bold; -fx-font-size: 24px;" />
        <Button onAction="#onPlayAgain" prefWidth="180" 
                style="-fx-font-size:18; -fx-background-radius:25; -fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Play Again" />
        <Button onAction="#onBack" prefWidth="180" 
                style="-fx-font-size:18; -fx-background-radius:25; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Exit to Menu" />
    </VBox>

    <Line fx:id="winLine" stroke="LIME" strokeLineCap="ROUND" strokeWidth="12" visible="false" />
</StackPane>