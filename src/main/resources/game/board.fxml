<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.control.Button?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.mycompany.clientxogame.XOController"
           style="-fx-background-color: linear-gradient(to bottom, #ffd1e8, #c8b3ff, #a0ffff);">

    <GridPane hgap="20" vgap="20" alignment="CENTER">

        <!-- Row 0 -->
        <StackPane GridPane.rowIndex="0" GridPane.columnIndex="0">
            <Rectangle width="100" height="100" fill="#2c003e" arcWidth="20" arcHeight="20"/>
            <Text fx:id="cell00" style="-fx-font-size:60; -fx-fill:lime;"/>
        </StackPane>
        <StackPane GridPane.rowIndex="0" GridPane.columnIndex="1">
            <Rectangle width="100" height="100" fill="#2c003e" arcWidth="20" arcHeight="20"/>
            <Text fx:id="cell01" style="-fx-font-size:60; -fx-fill:lime;"/>
        </StackPane>
        <StackPane GridPane.rowIndex="0" GridPane.columnIndex="2">
            <Rectangle width="100" height="100" fill="#2c003e" arcWidth="20" arcHeight="20"/>
            <Text fx:id="cell02" style="-fx-font-size:60; -fx-fill:lime;"/>
        </StackPane>

        <!-- Row 1 -->
        <StackPane GridPane.rowIndex="1" GridPane.columnIndex="0">
            <Rectangle width="100" height="100" fill="#2c003e" arcWidth="20" arcHeight="20"/>
            <Text fx:id="cell10" style="-fx-font-size:60; -fx-fill:hotpink;"/>
        </StackPane>
        <StackPane GridPane.rowIndex="1" GridPane.columnIndex="1">
            <Rectangle width="100" height="100" fill="#2c003e" arcWidth="20" arcHeight="20"/>
            <Text fx:id="cell11" style="-fx-font-size:60; -fx-fill:hotpink;"/>
        </StackPane>
        <StackPane GridPane.rowIndex="1" GridPane.columnIndex="2">
            <Rectangle width="100" height="100" fill="#2c003e" arcWidth="20" arcHeight="20"/>
            <Text fx:id="cell12" style="-fx-font-size:60; -fx-fill:hotpink;"/>
        </StackPane>

        <!-- Row 2 -->
        <StackPane GridPane.rowIndex="2" GridPane.columnIndex="0">
            <Rectangle width="100" height="100" fill="#2c003e" arcWidth="20" arcHeight="20"/>
            <Text fx:id="cell20" style="-fx-font-size:60; -fx-fill:cyan;"/>
        </StackPane>
        <StackPane GridPane.rowIndex="2" GridPane.columnIndex="1">
            <Rectangle width="100" height="100" fill="#2c003e" arcWidth="20" arcHeight="20"/>
            <Text fx:id="cell21" style="-fx-font-size:60; -fx-fill:cyan;"/>
        </StackPane>
        <StackPane GridPane.rowIndex="2" GridPane.columnIndex="2">
            <Rectangle width="100" height="100" fill="#2c003e" arcWidth="20" arcHeight="20"/>
            <Text fx:id="cell22" style="-fx-font-size:60; -fx-fill:cyan;"/>
        </StackPane>

    </GridPane>

    <Line fx:id="winLine" stroke="LIME" strokeWidth="8" visible="false" strokeLineCap="ROUND"/>

    <VBox fx:id="endGameBox" alignment="CENTER" spacing="15" visible="false">
        <Button fx:id="playAgainBtn" text="Play Again" onAction="#onPlayAgain" style="-fx-font-size:16; -fx-background-radius:20;"/>
        <Button fx:id="backBtn" text="Back" onAction="#onBack" style="-fx-font-size:16; -fx-background-radius:20;"/>
    </VBox>

</StackPane>
