<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.control.Button?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.mycompany.clientxogame.RecordController"
          style="-fx-background-color: linear-gradient(to bottom, #ffd1e8, #c8b3ff, #a0ffff);"> <VBox spacing="20"
          alignment="TOP_CENTER"
          maxWidth="700"
          maxHeight="700"
          style="
              -fx-background-color: rgba(255, 255, 255, 0.3); 
              -fx-background-radius: 30;
              -fx-padding: 20;
          ">

        <HBox alignment="CENTER">

            <Button text="Back"
        onAction="#onBack"
        style="
            -fx-background-color: #6c5ce7; 
            -fx-text-fill: white; 
            -fx-background-radius: 25; 
            -fx-font-weight: bold; 
            -fx-font-size: 14px;
            -fx-padding: 8 25;
            -fx-cursor: hand;
            -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 0);
        "/>

<Pane HBox.hgrow="ALWAYS"/>

<Button text="Start"
        onAction="#onStart"
        style="
            -fx-background-color: #6c5ce7; 
            -fx-text-fill: white; 
            -fx-background-radius: 25; 
            -fx-font-weight: bold; 
            -fx-font-size: 14px;
            -fx-padding: 8 25;
            -fx-cursor: hand;
            -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 0);
        "/>

        </HBox>

        <GridPane hgap="20" vgap="20" alignment="CENTER">

            <StackPane GridPane.rowIndex="0" GridPane.columnIndex="0">
                <Rectangle width="90" height="90" arcWidth="20" arcHeight="20" fill="#2c003e"/> <Text fx:id="cell00" style="-fx-font-size:50;"/>
            </StackPane>
            <StackPane GridPane.rowIndex="0" GridPane.columnIndex="1">
                <Rectangle width="90" height="90" arcWidth="20" arcHeight="20" fill="#2c003e"/>
                <Text fx:id="cell01" style="-fx-font-size:50;"/>
            </StackPane>
            <StackPane GridPane.rowIndex="0" GridPane.columnIndex="2">
                <Rectangle width="90" height="90" arcWidth="20" arcHeight="20" fill="#2c003e"/>
                <Text fx:id="cell02" style="-fx-font-size:50;"/>
            </StackPane>

            <StackPane GridPane.rowIndex="1" GridPane.columnIndex="0">
                <Rectangle width="90" height="90" arcWidth="20" arcHeight="20" fill="#2c003e"/>
                <Text fx:id="cell10" style="-fx-font-size:50;"/>
            </StackPane>
            <StackPane GridPane.rowIndex="1" GridPane.columnIndex="1">
                <Rectangle width="90" height="90" arcWidth="20" arcHeight="20" fill="#2c003e"/>
                <Text fx:id="cell11" style="-fx-font-size:50;"/>
            </StackPane>
            <StackPane GridPane.rowIndex="1" GridPane.columnIndex="2">
                <Rectangle width="90" height="90" arcWidth="20" arcHeight="20" fill="#2c003e"/>
                <Text fx:id="cell12" style="-fx-font-size:50;"/>
            </StackPane>

            <StackPane GridPane.rowIndex="2" GridPane.columnIndex="0">
                <Rectangle width="90" height="90" arcWidth="20" arcHeight="20" fill="#2c003e"/>
                <Text fx:id="cell20" style="-fx-font-size:50;"/>
            </StackPane>
            <StackPane GridPane.rowIndex="2" GridPane.columnIndex="1">
                <Rectangle width="90" height="90" arcWidth="20" arcHeight="20" fill="#2c003e"/>
                <Text fx:id="cell21" style="-fx-font-size:50;"/>
            </StackPane>
            <StackPane GridPane.rowIndex="2" GridPane.columnIndex="2">
                <Rectangle width="90" height="90" arcWidth="20" arcHeight="20" fill="#2c003e"/>
                <Text fx:id="cell22" style="-fx-font-size:50;"/>
            </StackPane>

        </GridPane>

    </VBox>

</StackPane>