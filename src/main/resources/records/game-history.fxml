<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" 
            
          style="-fx-background-color: linear-gradient(to bottom, #ffd1e8, #c8b3ff, #a0ffff);"
            xmlns="http://javafx.com/javafx/8" 
            xmlns:fx="http://javafx.com/fxml/1">
   <children>
     

      <Label layoutX="30.0" layoutY="110.0" text="Games History" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="22.0" />
         </font>
      </Label>

      <Button fx:id="backBtn" layoutX="510.0" layoutY="110.0" text="Back" 
              style="-fx-background-color: #f1c40f; -fx-background-radius: 15; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-padding: 5 20; -fx-cursor: hand;" />

      <ScrollPane layoutX="25.0" layoutY="155.0" prefHeight="220.0" prefWidth="550.0" 
                  style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: white; -fx-border-radius: 10;">
         <content>
            <VBox fx:id="recordsContainer" spacing="10" style="-fx-padding: 10;">
               
                <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="510.0" 
                      style="-fx-background-color: #2c003e; -fx-background-radius: 30; -fx-padding: 0 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);">
                    <children>
                        <Label text="Omar vs Ahmed" textFill="WHITE" 
                               style="-fx-font-size: 18; -fx-font-weight: bold; -fx-font-style: italic;">
                        </Label>
        
                        <Pane HBox.hgrow="ALWAYS" /> 
                        <Label text="2025-12-20" textFill="#f1c40f" 
                                            style="-fx-font-size: 14; -fx-font-weight: bold;">
                            <HBox.margin>
                                <javafx.geometry.Insets left="10" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>           
            </VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>